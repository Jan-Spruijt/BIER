<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - B.I.E.R</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/employee.css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,700,800&display=swap" rel="stylesheet">
</head>
<body>
   
    <div class="container">
        <main role="main" class="pb-3">
            <div class="area"></div>
                <nav class="main-menu">
                    <ul>
                        <li class="margin">
                            <div class="padding table">
                                <div class="size_width cell"></div>
                                <img class="mb-4 cell show" src="~/images/logo.png">
                            </div>
                        </li>
                        <li class="margin">
                            <a asp-controller="Home" asp-action="Dashboard">
                                <i class="fa fa-home nav-icon"></i>
                                <span class="nav-text">
                                    Dashboard
                                </span>
                            </a>

                        </li>
                        <div class="line"></div>
                        <li class="margin">
                            <a asp-controller="Incident" asp-action="ViewIncidents">
                                <i class="fa fa-times nav-icon"></i>
                                <span class="nav-text">
                                    Incidenten
                                </span>
                            </a>

                        </li>
                        <div class="line"></div>
                        <li class="margin">
                            <a href="../Request/ViewRequests">
                                <i class="fa fa-sitemap nav-icon"></i>
                                <span class="nav-text">
                                    Aanvragen
                                </span>
                            </a>

                        </li>
                        <div class="line"></div>
                        <li class="margin">
                            <a href="#">
                                <i class="fa fa-user nav-icon"></i>
                                <span class="nav-text">
                                    Profiel
                                </span>
                            </a>

                        </li>
                        <div class="line"></div>
                        <li class="margin">
                            <a asp-action="myschedule" asp-controller="Agenda">
                                <i class="fa fa-calendar nav-icon"></i>
                                <span class="nav-text">
                                    Mijn agenda
                                </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Date" asp-action="ViewDates">Calendar</a>
                        </li>
                    </ul>
                        @await Component.InvokeAsync("SideBar")
                </nav>


            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Corona_B.I.E.R_V1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
