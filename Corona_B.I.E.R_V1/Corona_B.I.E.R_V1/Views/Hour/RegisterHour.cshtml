@model Corona_B.I.E.R_V1.Models.RegisterHourModel
@{
    ViewData["Title"] = "RegisterHour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>HourView</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterHour">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee_Id" class="control-label"></label>
                <input asp-for="Employee_Id" class="form-control" />
                <span asp-validation-for="Employee_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StandbyHours" class="control-label"></label>
                <input asp-for="StandbyHours" class="form-control" />
                <span asp-validation-for="StandbyHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IncidentHours" class="control-label"></label>
                <input asp-for="IncidentHours" class="form-control" />
                <span asp-validation-for="IncidentHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



