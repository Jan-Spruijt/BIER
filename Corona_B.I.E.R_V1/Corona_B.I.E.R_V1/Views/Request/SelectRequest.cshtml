@model Corona_B.I.E.R_V1.Models.RequestModel


@{
    ViewData["Title"] = "SelectRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kies soort aanvraag</h1>

<form asp-action="SelectRequest">
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<RequestType>()">
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Selecteren" class="btn btn-primary" />
    </div>
</form>


